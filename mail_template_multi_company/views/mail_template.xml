<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="multi_company_mail_template_form_inherit" model="ir.ui.view">
        <field name="name">multi.company.mail.template.form.inherit</field>
        <field name="model">mail.template</field>
        <field name="inherit_id" ref="mail.email_template_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='model_id']" position="after">
                <field name="company_id" options="{'no_open': True, 'no_create': True}" groups="base.group_multi_company"/>
            </xpath>
        </field>
    </record>
    
    <record id="multi_company_mail_template_search_view_inherit" model="ir.ui.view">
        <field name="name">multi.company.mail.template.search.view.inherit</field>
        <field name="model">mail.template</field>
        <field name="inherit_id" ref="mail.view_email_template_search" />
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <field name="company_id" groups="base.group_multi_company" />
            </xpath>
        </field>
    </record>

    <record id="multi_company_mail_template_tree_view_inherit" model="ir.ui.view">
        <field name="name">multi.company.mail.template.tree.view.inherit</field>
        <field name="model">mail.template</field>
        <field name="inherit_id" ref="mail.email_template_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='model_id']" position="after">
                <field name="company_id" groups="base.group_multi_company" />
            </xpath>
        </field>
    </record>
</odoo>
